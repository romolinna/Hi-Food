<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.food">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY" />
    <uses-permission android:name="android.permission.WRITE_USER_DICTIONARY" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/foodi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Food">
        <activity android:name=".activity.Recipe"
            android:exported="true"/>
        <activity android:name=".activity.SubCategoryMain"
            android:exported="true"/>
        <activity android:name=".activity.RecipeMain"
            android:exported="true"/>
        <activity android:name=".activity.Table"
            android:exported="true"/>
        <activity android:name=".activity.Favorites"
            android:exported="true"/>
        <activity android:name=".activity.AddRecipe"
            android:exported="true"/>
        <activity android:name=".activity.MyRecipe"
            android:exported="true"/>
        <activity android:name=".activity.ShoppingList"
            android:exported="true"/>
        <activity android:name=".activity.Search"
            android:exported="true"/>
        <activity android:name=".activity.SearchResult"
            android:exported="true"/>
        <activity android:name=".activity.CategoryMain"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>